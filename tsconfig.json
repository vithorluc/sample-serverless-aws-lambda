{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "paths": {
         "@api/*": ["./src/api/*"],
         "@config/*": ["./src/config/*"],
         "@application/*": ["./src/application/*"],
         "@domain/*": ["./src/domain/*"],
         "@infrastructure/*": ["./src/infrastructure/*"],
       },
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}